{
  "scripts": {
    "dev": "convex dev --run-sh 'bun --watch src/server.ts'",
    "dev:api": "bun --watch src/server.ts",
    "dev:convex": "convex dev",
    "convex:configure-local": "convex dev --once --configure existing --dev-deployment local",
    "deploy": "vercel deploy --prod",
    "deploy:convex": "convex deploy",
    "local:sync-secret": "bash ./bin/convex-sync-env-local.sh",
    "local:migrate:d1": "bash ./bin/migrate-d1-from-env-local.sh",
    "local:migrate:d1:small": "D1_MIGRATION_PAGE_SIZE=100 bash ./bin/migrate-d1-from-env-local.sh",
    "prepare": "husky",
    "test": "echo \"No test specified\" && exit 0",
    "scrape:mortgage": "bun run bin/scrape-mortgage-rates.ts",
    "scrape:personal": "bun run bin/scrape-personal-loan-rates.ts",
    "scrape:car": "bun run bin/scrape-car-loan-rates.ts",
    "scrape:credit": "bun run bin/scrape-credit-card-rates.ts",
    "scrape:all": "bun run bin/scrape-mortgage-rates.ts && bun run bin/scrape-personal-loan-rates.ts && bun run bin/scrape-car-loan-rates.ts && bun run bin/scrape-credit-card-rates.ts",
    "check-uptime": "bun run bin/uptime-check.ts",
    "migrate:d1": "bun run bin/migrate-d1-export-to-convex.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@hono/swagger-ui": "^0.5.3",
    "@hono/zod-openapi": "^1.2.0",
    "cheerio": "1.1.2",
    "convex": "^1.26.4",
    "hono": "^4.11.5",
    "ora": "^9.1.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^24.10.9",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "domhandler": "^5.0.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "pino": "^10.2.1",
    "pino-pretty": "^13.1.3"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write"
  }
